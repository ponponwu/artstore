  <div class="w_sidebar">
    <section class="sky-form">
      <h4>Categories</h4>
      <div class="row1 scroll-pane">
        <div class="col col-4">
          <% cache Category.order('updated_at DESC').last do %>
            <% Category.find_each do |c| %>
              <label class="checkbox"><input type="checkbox" name="checkbox">
                <i></i><%= link_to(c.name,products_path(category: c.name) ) %>
              </label>
            <% end %>
          <% end %>
          <!-- <label class="checkbox"><input type="checkbox" name="checkbox" checked="">
            <i></i>Shoes</label> -->
        </div>
      </div>
    </section>
    <section class="sky-form">
      <h4>Brands</h4>
      <ul class="w_nav2">
        <% cache Brand.order('updated_at DESC').last do %>
          <% Brand.find_each do |b| %>
            <label class="checkbox"><input type="checkbox" name="checkbox">
              <i></i><%= link_to(b.name,products_path(brand: b.name) ) %>
            </label>
          <% end %>
        <% end %>
      </ul>
    </section>
    <section class="sky-form">
      <h4>search</h4>
        <ul class="w_nav2">
          <%= search_form_for @q do |f| %>
            <li><%= f.label :標題或內文 %></li>
            <li><%= f.search_field :title_or_description_cont %></li>
            <li><%= f.submit '搜尋', :class => 'btn btn-search' %></li>
          <% end %>
        </ul>
      </h4>
    </section>
  </div>
