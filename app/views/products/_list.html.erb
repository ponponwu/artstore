
<div class="row">
<!-- Product #1 Starts -->
	<% @products.each do |p| %>
		<div class="col-xs-12">
			<div class="product-col list clearfix">
				<div class="image">
					<%= link_to product_path(p) do %>
						<%= get_photo(p.photos) %>
					<% end %>
				</div>
				<div class="caption">
					<h4><%= link_to(p.title, product_path(p)) %></h4>
					<div class="description">
						<%= p.description %>
					</div>
					<div class="price">
						<!-- <p class="price-tax">Ex Tax: $279.99</p> -->
						<span class="price-new">$<%= discount_price(p.price) %></span>
						<span class="price-old">$<%= p.price %></span>
					</div>
					<div class="cart-button button-group">
						<% if p.quantity > 0 %>
							<%= button_to add_to_cart_product_path(p), :class => "btn btn-cart", :method=> :post do %>
								Add to cart<i class="fa fa-shopping-cart"></i>
							<% end %>
						<% else %>
							<p>已售完,補貨中</p>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	<% end %>
<!-- Product #1 Ends -->
</div>
			<!-- Product List Display Ends -->
<br>
