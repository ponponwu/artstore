<div class="product-filter">
	<div class="row">
		<div class="col-md-4">
			<div class="display">
				<!-- <a href="category-list.html" class="active">
					<i class="fa fa-th-list" title="List View"></i>
				</a> -->
				<%= link_to 'javascript:;',{:class =>"list_view active" } do %>
					<i class="fa fa-th-list" title="List View"></i>
				<% end %>
				<!-- <%= link_to 'javascript:;', id:"grid_view" do %>
					<i class="fa fa-th" title="Grid View"></i>
				<% end %> -->
				<%= link_to 'javascript:;',{:class =>"grid_view",:controller =>'products',:action => 'change_product_grid',:all_product => @products } , :remote => true do %>
					<i class="fa fa-th" title="List View"></i>
				<% end %>
				<!-- <a href="category-grid.html">
					<i class="fa fa-th" title="Grid View"></i>
				</a> -->
			</div>
		 </div>
		<div class="col-md-2 text-right">
			<label class="control-label">Sort</label>
		</div>
		<div class="col-md-3 text-right">
			<select class="form-control">
				<option value="default" selected="selected">Default</option>
				<option value="NAZ">Name (A - Z)</option>
				<option value="NZA">Name (Z - A)</option>
			</select>
		</div>
		<div class="col-md-1 text-right">
			<label class="control-label">Show</label>
		</div>
		<div class="col-md-2 text-right">
			<select class="form-control">
				<option value="1">1</option>
				<option value="2">2</option>
				<option value="3" selected="selected">3</option>
			</select>
		</div>
	</div>
</div>
<div class="row">
<!-- Product #1 Starts -->
	<% @products.each do |p| %>
		<div class="col-xs-12">
			<div class="product-col list clearfix">
				<div class="image">
					<%= link_to product_path(p) do %>
						<%= get_photo(p.photos) %>
					<% end %>
				</div>
				<div class="caption">
					<h4><%= link_to(p.title, product_path(p)) %></h4>
					<div class="description">
						<%= p.description %>
					</div>
					<div class="price">
						<!-- <p class="price-tax">Ex Tax: $279.99</p> -->
						<span class="price-new"><%= p.price %></span>
						<span class="price-old">$249.50</span>
					</div>
					<div class="cart-button button-group">
						<% if p.quantity > 0 %>
							<%= button_to add_to_cart_product_path(p), :class => "btn btn-cart", :method=> :post do %>
								Add to cart<i class="fa fa-shopping-cart"></i>
							<% end %>
						<% else %>
							<p>已售完,補貨中</p>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	<% end %>
<!-- Product #1 Ends -->
</div>
			<!-- Product List Display Ends -->
<br>
