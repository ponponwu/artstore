<div id="main-container" class="container">
  <div class="row">
  <!-- Primary Content Starts -->
    <div class="col-md-9">
    <!-- Breadcrumb Starts -->
      <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li>Categories</li>
        <li class="active"><%= @title %></li>
      </ol>
    <!-- Breadcrumb Ends -->
    <!-- Main Heading Starts -->
      <h2 class="main-heading2"><%= @title %></h2>
    <!-- Main Heading Ends -->
    <!-- Category Intro Content Starts -->
      <div class="row cat-intro">
        <%= image_tag("women1.jpg",class:"img-responsive img-thumbnail") %>
      </div>
    <!-- Category Intro Content Ends -->
    <!-- Product Filter Starts -->
      <div id="product_list_area">
        <%= render :partial => "products/list", :locals => { :products  => @products } %>
      </div>
      <div id="product_grid_area">
        <%= render :partial => "products/grid", :locals => { :products  => @products } %>
      </div>
    </div>
    <div class="col-md-3">
    <!-- Categories Links Starts -->
      <%= render"common/side" %>
    <!-- Bestsellers Links Ends -->
    </div>

  </div>
</div>
