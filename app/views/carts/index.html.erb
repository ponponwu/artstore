  
<head>
    <link href='http://fonts.googleapis.com/css?family=Quicksand:300,400,700' rel='stylesheet' type='text/css'>
</head>
<div class="container">
    <div class="check-out">
        <h2>購物車</h2>
        <%= link_to("清空購物車",clean_carts_path ,method: :delete , class: "hvr-shutter-in-horizontal pull-right", data: { confirm: "你確定要清空整個購物車嗎？"} ) %>
        <hr>
        <br />
        <table>
            <tr>
                <th width="500">商品資訊</th>
                <th width="150">數量</th>
                <th>單價</th>
                <th>操作選項</th>
            </tr>
            <% current_cart.items.each do |product| %>
              <tr>
                  <td class="ring-in">
                    <%= link_to product_path(product), :class =>"at-in" do %>
                      <% if product.photo.present? %>
                        <%= image_tag(product.photo.image.thumb.url, class: "thumbnail img-responsive", size: "120x120") %>
                      <% else %>
                        <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail img-responsive") %>
                      <% end %>
                    <% end %>
                    <div class="sed">
                        <h5><%= product.title %></h5>
                        <p><%= product.description %></p>
                    </div>
                    <div class="clearfix"></div>
                  </td>
                  <td class="check center">
                    <% item = current_cart.find_cart_item(product) %>
                      <%= form_for item, url: item_path(product) do |f| %>
                      <%= f.select :quantity, 1..product.quantity %>
                      <%= f.submit "更新",class: "btn btn-sm btn-default", data: {disable_with: "Submitting"} %>
                    <% end %>
                    <!-- <input type="text" value="1" onfocus="this.value='';" onblur="if (this.value == '') {this.value ='';}"> -->
                  </td>
                  <td class="center"><%= product.price %></td>
                  <td class="center">
                    <%= link_to item_path(product), method: :delete do  %>
                      <i class="fa fa-trash fa-2x"></i>
                    <% end %>
                  </td>
              </tr>
            <% end %>
        </table>
        <div class="total clearfix">
          <span class="pull-right">
            <span>
                總計
                <%= render_cart_total_price(current_cart) %>
                NTD
            </span>
          </span>
        </div>
        <hr>
        <div class="checkout clearfix">
            <%= link_to("確認結賬", checkout_carts_path, method: :post, class: "btn btn-lg btn-danger pull-right") %>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
